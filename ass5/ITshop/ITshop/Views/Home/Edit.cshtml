@model ITshop.Models.Product

<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
</head>
<body>
    <h2>Edit Product</h2>

    @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
    {
        <input type="hidden" name="productId" value="@Model.Id">

        <label for="productName">Name:</label>
        <input type="text" id="productName" name="productName" value="@Model.Name" required>

        <label for="productPrice">Price:</label>
        <input type="number" id="productPrice" name="productPrice" value="@Model.Price" required>

        <label for="productBrand">Brand:</label>
        <input type="text" id="productBrand" name="productBrand" value="@Model.Brand" required>

        <label for="productQuantity">Quantity:</label>
        <input type="number" id="productQuantity" name="productQuantity" value="@Model.Quantity" required>

        <label for="productDescription">Description:</label>
        <textarea id="productDescription" name="productDescription" rows="4" required>@Model.Description</textarea>

        <label for="productImageUrl">Image URL:</label>
        <input type="text" id="productImageUrl" name="productImageUrl" value="@Model.ImageUrl" required>

        <button type="submit">Save Changes</button>
    }

    <a href="@Url.Action("Index", "Home")">Back to Product List</a>
</body>
</html>
